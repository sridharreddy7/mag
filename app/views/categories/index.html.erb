<%= link_to 'View all Categories' %>
<br/>

<h1>Listing categories</h1>
<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% current_user_id = User.find_by_id(session[:user_logged_in]).id
     @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>

        <td><%=
            if (!session[:user_logged_in].nil? and (current_user_id == session[:user_logged_in] and User.find_by_id(session[:user_logged_in]).usertype == 1))
                link_to 'Edit', edit_category_path(category)
            end
        %></td>
        <td><%=
            if (!session[:user_logged_in].nil? and (current_user_id == session[:user_logged_in] and User.find_by_id(session[:user_logged_in]).usertype == 1))
                link_to 'Destroy', category, confirm: 'Are you sure?', method: :delete
            end
        %></td>


      </tr>

  <% end %>
</table>

